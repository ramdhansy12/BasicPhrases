<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="My Favorite songs"
        android:textAlignment="center" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >


        <Button
            android:id="@+id/hilangdanlupakan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:textAllCaps="false"
            android:layout_gravity="fill"
            android:backgroundTint="#E64A19"
            android:onClick="buttonTapped"
            android:text="Hilang dan&#10;Lupakan" />

        <Button
            android:id="@+id/ilekyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#F57C00"
            android:onClick="buttonTapped"
            android:textAllCaps="false"
            android:text="I like You?" />

        <Button
            android:id="@+id/spechless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:textAllCaps="false"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#FBC02D"
            android:onClick="buttonTapped"
            android:text="Naomi Schoot &#10; Spechless" />

        <Button
            android:id="@+id/alkoholfree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#FFA000"
            android:onClick="buttonTapped"
            android:text="TWICE- Alkohol free"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/losdol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textAllCaps="false"
            android:backgroundTint="#689F38"
            android:onClick="buttonTapped"
            android:text="Denny Caknan&#10;Los Dol" />

        <Button
            android:id="@+id/dontwatchyourcry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:textAllCaps="false"
            android:backgroundTint="#AFB42B"
            android:onClick="buttonTapped"
            android:text="Dont Watch&#10;Your Cry" />





    </GridLayout>



</RelativeLayout>